{
  "git": {
    "push": true,
    "commitMessage": "chore(release): v${version}",
    "requireBranch": "main"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  }
}
